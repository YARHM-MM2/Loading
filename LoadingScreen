-- LocalScript in StarterGui

local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

-- Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0,500,0,160)
mainFrame.Position = UDim2.new(0.5,-250,0.5,-80)
mainFrame.BackgroundColor3 = Color3.fromRGB(0,0,0)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = gui

-- Top left tag (@scriptplayer)
local tag = Instance.new("TextLabel")
tag.Size = UDim2.new(0.3,0,0.2,0)
tag.Position = UDim2.new(0,10,0,5)
tag.BackgroundTransparency = 1
tag.Text = "@scriptplayer"
tag.Font = Enum.Font.Cartoon
tag.TextSize = 18
tag.TextColor3 = Color3.fromRGB(255,255,255)
tag.TextXAlignment = Enum.TextXAlignment.Left
tag.Parent = mainFrame

-- Title (center)
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1,0,0.2,0)
title.Position = UDim2.new(0,0,0,5)
title.BackgroundTransparency = 1
title.Text = "BEST UNIVERSE SCRIPT"
title.Font = Enum.Font.Cartoon
title.TextSize = 24
title.TextColor3 = Color3.fromRGB(255,255,255)
title.TextXAlignment = Enum.TextXAlignment.Center
title.Parent = mainFrame

-- Subtitle "Loading"
local sub = Instance.new("TextLabel")
sub.Size = UDim2.new(1,0,0.2,0)
sub.Position = UDim2.new(0,0,0.25,0)
sub.BackgroundTransparency = 1
sub.Text = "Loading"
sub.Font = Enum.Font.Cartoon
sub.TextSize = 20
sub.TextColor3 = Color3.fromRGB(255,255,255)
sub.Parent = mainFrame

-- Progress bar background
local barBg = Instance.new("Frame")
barBg.Size = UDim2.new(0.7,0,0.25,0)
barBg.Position = UDim2.new(0.15,0,0.5,0)
barBg.BackgroundColor3 = Color3.fromRGB(40,40,40)
barBg.BorderSizePixel = 0
barBg.Parent = mainFrame

-- Progress bar fill (green)
local barFill = Instance.new("Frame")
barFill.Size = UDim2.new(0,0,1,0)
barFill.Position = UDim2.new(0,0,0,0)
barFill.BackgroundColor3 = Color3.fromRGB(0,200,0)
barFill.BorderSizePixel = 0
barFill.Parent = barBg

-- Error text inside bar (hidden until 100%)
local errorText = Instance.new("TextLabel")
errorText.Size = UDim2.new(1,0,1,0)
errorText.BackgroundTransparency = 1
errorText.Text = ""
errorText.Font = Enum.Font.Cartoon
errorText.TextSize = 22
errorText.TextColor3 = Color3.fromRGB(0,0,0)
errorText.TextStrokeTransparency = 0
errorText.Parent = barFill

-- Percentage label (right side)
local percent = Instance.new("TextLabel")
percent.Size = UDim2.new(0.2,0,0.2,0)
percent.Position = UDim2.new(0.75,0,0.5,0)
percent.BackgroundTransparency = 1
percent.Text = "0%"
percent.Font = Enum.Font.Cartoon
percent.TextSize = 20
percent.TextColor3 = Color3.fromRGB(255,255,255)
percent.TextXAlignment = Enum.TextXAlignment.Left
percent.Parent = mainFrame

-- Small "please be patient.." message
local patience = Instance.new("TextLabel")
patience.Size = UDim2.new(1,0,0.15,0)
patience.Position = UDim2.new(0,0,0.85,0)
patience.BackgroundTransparency = 1
patience.Text = "⚠️ Please be patient.."
patience.Font = Enum.Font.Cartoon
patience.TextSize = 16
patience.TextColor3 = Color3.fromRGB(255,255,0)
patience.TextXAlignment = Enum.TextXAlignment.Center
patience.Parent = mainFrame

-- Animate loading 1% -> 100%
for i = 1,100 do
	percent.Text = i.."%"
	barFill.Size = UDim2.new(i/100,0,1,0)
	wait(0.6) -- total ~60s
end

-- Change to error state
barFill.BackgroundColor3 = Color3.fromRGB(255,0,0)
errorText.Text = "ERROR"
percent.Text = "100%"
